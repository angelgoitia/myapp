<div class="row">&nbsp;</div>
<div class="card mx-auto text-center" style="width: 30rem;">
  <h2>Iniciar Sesión</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :correo %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "correo", :class => "form-control", placeholder: "uah@dominio.com", :required => true %>
    </div>

    <div class="field">
      <%= f.label :contraseña %><br />
      <%= f.password_field :password, autocomplete: "contraseña", :class => "form-control", placeholder: "Contraseña", :required => true %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me , :class => "form-check-inpu" %>
        <%= f.label :Recuérdame %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Iniciar Sesión", :class => "btn btn-danger" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
