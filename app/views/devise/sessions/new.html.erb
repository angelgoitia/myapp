<script>
  $(document).ready(function(){
    $("#icons-eye-slash-fill").show();
    $("#icons-eye-fill").hide();

    $("#eye-button").click(function(){
      if($("#input-password").attr("type") == "password"){
        $("#input-password").attr("type", "text");
        $("#icons-eye-slash-fill").hide();
        $("#icons-eye-fill").show();
      }
      else
      {
        $("#input-password").attr("type", "password");
        $("#icons-eye-slash-fill").show();
        $("#icons-eye-fill").hide();
      }
    });
  });
</script>
<div class="row">&nbsp;</div>
<div class="card mx-auto text-center" style="width: 30rem;">
  <h2>Iniciar Sesión</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :correo %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "correo", :class => "form-control", placeholder: "uah@dominio.com", :required => true %>
    </div>

    <div class="field ">
      <%= f.label :contraseña %><br />
      <div class="input-group mb-3">
        <%= f.password_field :password, id: "input-password", autocomplete: "contraseña", :class => "form-control", placeholder: "Contraseña", :required => true %>
        <div class="input-group-prepend">
            <a id="eye-button" class="input-group-text">
              <%= image_tag("icons/eye-slash-fill.svg", id: "icons-eye-slash-fill", height: "20", width: "20")%>
              <%= image_tag("icons/eye-fill.svg", id: "icons-eye-fill", height: "20", width: "20")%>
            </a>
          </div>
      </div>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me , :class => "form-check-inpu" %>
        <%= f.label :Recuérdame %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Iniciar Sesión", :class => "btn btn-danger" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
